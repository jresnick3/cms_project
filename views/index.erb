<!-- views/index.erb -->
<ul>
<% @content.each do |file| %>
  <li>
    <a href="./<%= file %>"><%= file %></a>
    <a href="/<%= file %>/edit">Edit</a>
    <form class="inline" action="/<%= file %>/delete" method="post">
      <button type="submit">Delete</button>
    </form>
  </li>
<% end %>
</ul>
<p><a href="/new">New Document</a></p>

<% if session[:username] %>
  <form method="post" action="/users/signout">
    <p class="user-status">
      Signed in as <%= session[:username] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <p class="user-status"><a href="/users/signin">Sign In</a></p>
<% end %>

<% if session[:username] == 'admin' %>
  <form method="post" action="/configuration.yml/edit">
    <button type="submit">Edit user list</button>
  </form>
<% end %>
